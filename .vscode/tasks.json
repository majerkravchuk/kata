{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run matching test",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--filter",
                "FullyQualifiedName~${fileBasenameNoExtension}Test",
                "--logger",
                "\"console;verbosity=detailed\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
